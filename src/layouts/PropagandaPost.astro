---
/*
  Layout: PropagandaPost.astro
  Purpose: Lightweight layout for propaganda pages that does NOT require blog-specific fields
           like pubDate or updatedDate. Mirrors the site's BaseHead/Header/Footer usage.
*/
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, heroImage } = Astro.props;
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .hero-image { width: 100%; }
      .hero-image img { display: block; margin: 0 auto; border-radius: 12px; box-shadow: var(--shadow); }
      .prose { max-width: 75ch; margin: 0 auto; }
    </style>
  </head>

  <body>
    <Header />
    <main class="paper container">
      <article>
        <div class="hero-image">
          {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
        </div>

        <div class="prose">

          <!-- Page content will be inserted where the slot is placed -->
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
